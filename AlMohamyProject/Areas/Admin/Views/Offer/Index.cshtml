@model AlMohamyProject.Models.HomePageModel
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>عرض العروض</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">العروض</a></li>
                    <li class="breadcrumb-item active">عرض العروض</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-12">


            <div class="card">
                <div class="card-header">
                   
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <table id="example1" class="table table-bordered table-striped ">
                        <thead>
                            <tr>
                                <th>اسم الخدمة</th>
                                <th>اسم المستخدم</th>
                                <th>اسم المحامي</th>
                                <th>صورة المحامي</th>
                                <th>تقييم المحامي عدد نجوم </th>
                                <th>تقييم المحامي نسبة  </th>
                                <th>وصف مختصر  للمحامي   </th>
                                <th>عدد سنوات الخبرة  للمحامي   </th>
                                <th>تاريخ بداية العرض </th>
                                <th> يوم انتهاء العرض        </th>
                               
                                <th>حالة العرض</th>
                              
                              
                               
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.lstOffers)
                            {

                                <tr>
                                    <td>@item.Notes</td>
                                    <td>
                                        @item.UserName
                                    </td>
                                      <td>
                                        @item.LawyerName
                                    </td>

                                    <td style="width:10%">
                                       
                                            <img style="max-width: 100%; " max-height: 100%;" src="@string.Format("/Uploads/{0}",item.LawyerImage)" alt="Img placeholder">

                                           
                                          
                                       
                                       
                                    </td>
                                    <td>@item.LawyerEvalNoStarts</td>
                                    <td>
                                        @item.LawyersEvalNumerical
                                    </td>
                                    <td>
                                        @item.LawyerShortDescription
                                    </td>
                                    <td>
                                        @item.LawyersExperinceYears
                                    </td>
                                    <td>
                                        @item.CreatedDate
                                    </td>
                                     <td>
                                        @item.OfferEndDate
                                    </td>
                                    <td>
                                        @item.OfferStatus
                                    </td>
                                  
                                  
                                   
                                </tr>

                            }


                        </tbody>
                        <tfoot>
                            <tr>
                                <th>اسم الخدمة</th>
                                <th>اسم المستخدم</th>
                                <th>اسم المحامي</th>
                                <th>صورة المحامي</th>
                                <th>تقييم المحامي عدد نجوم </th>
                                <th>تقييم المحامي نسبة  </th>
                                <th>وصف مختصر  للمحامي   </th>
                                <th>عدد سنوات الخبرة  للمحامي   </th>
                                <th>تاريخ بداية العرض </th>
                                <th> يوم انتهاء العرض        </th>

                                <th>حالة العرض</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->
