@model Domains.TbMainConsulting
<!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>اضافة استشارات</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">استشارات</a></li>
              <li class="breadcrumb-item active">اضافة استشارات</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <!-- left column -->
          <div class="col-md-12">
            <!-- general form elements -->
            <div class="card card-primary">
              <div class="card-header">
                <h3 class="card-title">Quick Example</h3>
              </div>
              <!-- /.card-header -->
              <!-- form start -->
                    <form enctype="multipart/form-data" method="post" role="form" asp-area="Admin" asp-controller="MainConsulting" asp-action="Save">
                <div class="card-body">
                            <div asp-validation-summary="All" class="text-danger"></div>
                  <div class="form-group">
                                <input type="hidden"  asp-for="MainConsultingId" >
                                <label for="exampleInputEmail1">عنوان الاستشارة</label>
                                <input type="text" class="form-control" id="exampleInputEmail1" asp-for="MainConsultingTitle" placeholder="عنوان الاستشارة">
                                <span asp-validation-for="MainConsultingTitle" class="text-danger"></span>
                  </div>
                  <div class="form-group">
                                <label for="exampleInputPassword1">تفاصيل الاستشارة</label>
                                <input required type="text" class="form-control" id="exampleInputPassword1" asp-for="Notes" placeholder="تفاصيل الاستشارة">
                                <span asp-validation-for="Notes" class="text-danger"></span>
                  </div>
                  <div class="form-group">

                                <div class="input-group mb-3">
                                    <div class="custom-file">
                                        <label for="exampleInputPassword1">صورة الاستشارة</label>
                                        <input required  type="file" name="files" id="selectedFile" />
                                        
                                    </div>
                                   
                                </div>
                  </div>
                  <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="exampleCheck1">
                    <label class="form-check-label" for="exampleCheck1">Check me out</label>
                  </div>
                </div>
                <!-- /.card-body -->

                <div class="card-footer">
                  <button type="submit" class="btn btn-primary">Submit</button>
                </div>
              </form>
            </div>
            <!-- /.card -->

          
            <!-- /.card -->

          </div>
          <!--/.col (left) -->
      
        </div>
        <!-- /.row -->
      </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
<script type="application/javascript">
    var a = document.getElementById("inputGroupFile02");
    a.value= "ahmed.txt";
</script>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
     
    }
    }