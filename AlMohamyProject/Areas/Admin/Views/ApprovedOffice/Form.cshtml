@model Domains.TbApprovedOffice
<!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
                <h1>اضافة المكاتب المعتمدة</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">المكاتب المعتمدة</a></li>
                    <li class="breadcrumb-item active">اضافة المكاتب المعتمدة</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <!-- left column -->
          <div class="col-md-12">
            <!-- general form elements -->
            <div class="card card-primary">
              <div class="card-header">
               
              </div>
              <!-- /.card-header -->
              <!-- form start -->
                    <form enctype="multipart/form-data" method="post" role="form" asp-area="Admin" asp-controller="ApprovedOffice" asp-action="Save">
                <div class="card-body">
                            <div asp-validation-summary="All" class="text-danger"></div>
                  <div class="form-group">
                                <input type="hidden"  asp-for="ApprovedOfficeId" >
                                <label for="exampleInputEmail1">اسم المكتب المعتمد</label>
                                <input type="text" class="form-control" id="exampleInputEmail1" asp-for="ApprovedOfficeName" placeholder="اسم المكتب المعتمد">
                                <span asp-validation-for="ApprovedOfficeName" class="text-danger"></span>
                  </div>
                  <div class="form-group">
                                <label for="exampleInputPassword1">اسم المنطقة</label>
                                <input  type="text" class="form-control" id="exampleInputPassword1" asp-for="AreaName" placeholder="اسم المنطقة">
                                <span asp-validation-for="AreaName" class="text-danger"></span>
                  </div>
                  <div class="form-group">
                                <label for="exampleInputPassword1">اسم المدينة</label>
                                <input type="text" class="form-control" id="exampleInputPassword1" asp-for="CityName" placeholder="اسم المدينة">
                                <span asp-validation-for="CityName" class="text-danger"></span>
                   </div>
                  <div class="form-group">

                                <div class="input-group mb-3">
                                    <div class="custom-file">
                                        <label for="exampleInputPassword1">لوجو المكتب</label>
                                        <input asp-for="ApprovedOfficeLogo" required  type="file" name="files" id="selectedFile" />
                                        
                                    </div>
                                   
                                </div>
                  </div>
                  <div class="form-group">

                                <div class="input-group mb-3">
                                    <div class="custom-file">
                                        <label for="exampleInputPassword1">ملف الرخصة</label>
                                        <input asp-for="ApprovedOfficeLicenseDoc" required type="file" name="filess" id="selectedFile" />

                                    </div>

                                </div>
                   </div>
                 
                </div>
                <!-- /.card-body -->

                <div class="card-footer">
                  <button type="submit" class="btn btn-primary">Submit</button>
                </div>
              </form>
            </div>
            <!-- /.card -->

          
            <!-- /.card -->

          </div>
          <!--/.col (left) -->
      
        </div>
        <!-- /.row -->
      </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
<script type="application/javascript">
    var a = document.getElementById("inputGroupFile02");
    a.value= "ahmed.txt";
</script>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
     
    }
    }